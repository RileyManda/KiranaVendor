<LinearLayout
    android:id="@+id/dataForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone">

    <TextView
        android:id="@+id/hellotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_formdata"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_tag_faces_black_24dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fnamelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:counterEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ufname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/firstname"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/snamelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:counterEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ulname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/lastname"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/agelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:counterEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/uage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/age"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accTypeLay"
        app:counterEnabled="true"
        app:counterMaxLength="6"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/accType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:hint="@string/acctype"
            android:maxLines="1"
            android:inputType="textAutoCorrect"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >



        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Save"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_alignParentStart="true"
           />

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            />
    </RelativeLayout>




</LinearLayout>