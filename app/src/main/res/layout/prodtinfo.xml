<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/vendorsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_alignParentStart="true">



        <ImageView
            android:id="@+id/createdBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_store_black_24dp"
            />

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start|bottom"
            android:maxLines="1"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="@string/vendorname"
            android:textColor="@color/grey_500"
            android:layout_toRightOf="@+id/createdBy"
            android:layout_toEndOf="@+id/createdBy"/>




    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/vendorsView"
        android:layout_toEndOf="@+id/vendorsView">

        <ImageView
            android:id="@+id/at"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:src="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/prodTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start|bottom"
            android:maxLines="1"
            android:text="@string/time"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="@string/time"
            android:textColor="@color/grey_500"
            android:layout_toRightOf="@+id/at"
            android:layout_toEndOf="@+id/at"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/qtyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/timeView"
        android:layout_toEndOf="@+id/timeView">

        <ImageView
            android:id="@+id/qtylabel"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:src="@drawable/ic_filter_list_black_24dp"
            />

        <TextView
            android:id="@+id/product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start|bottom"
            android:maxLines="1"
            android:text="@string/time"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="@string/time"
            android:textColor="@color/grey_500"
            android:layout_toRightOf="@+id/qtylabel"
            android:layout_toEndOf="@+id/qtylabel"/>


    </RelativeLayout>

    <!-- android:layout_marginLeft="-20dp"
        android:layout_marginStart="-20dp"-->




    <RelativeLayout
        android:id="@+id/likesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        >

        <View
            android:id="@+id/likeDiv"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/grey_500"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp" />

        <TextView
            android:id="@+id/countLabel"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="3dp"

            android:clickable="true"
            android:focusable="true"

            android:padding="2dp"
            android:scaleType="fitXY"
            android:text="@string/salescount"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/likeDiv"
            android:layout_toEndOf="@+id/likeDiv"
            />


        <TextView
            android:id="@+id/prod_sales_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/countLabel"
            android:padding="1dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:textStyle="bold"
            tools:text="0"
            android:text="@string/_0"
            android:layout_toEndOf="@+id/countLabel"
            />

        <ImageView
            android:id="@+id/prodCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/prod_sales_count"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="16dp"
            android:padding="1dp"
            app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
            />
    </RelativeLayout>







</RelativeLayout>









